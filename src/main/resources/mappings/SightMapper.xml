<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tinkoff.tourism.dao.sights.SightRepository">

    <select id="findAll" resultMap="SightMap">
        SELECT *
        FROM sights
    </select>

    <select id="findById" resultMap="SightMap">
        SELECT *
        FROM sights
        WHERE sights.id = #{id}
    </select>

    <select id="findByName" resultMap="SightMap">
        SELECT *
        FROM sights
        WHERE sights.name = #{name}
    </select>

    <update id="updateSight" parameterType="tinkoff.tourism.model.sights.Sight">
        UPDATE sights
        SET NAME        = #{name},
            TYPE        = #{type},
            XCOORDINATE = #{xCoordinate},
            YCOORDINATE = #{yCoordinate},
            DESCRIPTION = #{description},
            SITELINK = #{siteLink},
            OPENTIME = #{openTime},
            CLOSETIME = #{closeTime},
            PRICE = #{price}
        WHERE ID = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE
        FROM sights
        WHERE ID = #{id}
    </delete>

    <delete id="deleteAll">
        DELETE
        FROM sights
    </delete>

    <resultMap id="SightMap" type="tinkoff.tourism.model.sights.Sight">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="xCoordinate" column="xCoordinate"/>
        <result property="yCoordinate" column="yCoordinate"/>
        <result property="description" column="description"/>
        <result property="siteLink" column="siteLink"/>
        <result property="openTime" column="openTime"/>
        <result property="closeTime" column="closeTime"/>
        <result property="price" column="price"/>
    </resultMap>

</mapper>