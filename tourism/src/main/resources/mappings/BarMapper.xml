<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tinkoff.tourism.dao.sights.BarRepository">

    <insert id="addSight" parameterType="tinkoff.tourism.model.sights.Bar">
        INSERT INTO bars (name, type, xCoordinate, yCoordinate, description, siteLink, openTime, closeTime, price, forAdults)
        VALUES (#{name}, #{type}, #{xCoordinate}, #{yCoordinate}, #{description}, #{siteLink}, #{openTime}, #{closeTime}, #{price}, #{forAdults})
    </insert>

    <select id="findAll" resultMap="BarMap">
        SELECT *
        FROM bars
    </select>

    <select id="findById" resultMap="BarMap">
        SELECT *
        FROM bars
        WHERE bars.id = #{id}
    </select>

    <update id="updateSight" parameterType="tinkoff.tourism.model.sights.Bar">
        UPDATE bars
        SET NAME        = #{name},
            TYPE        = #{type},
            XCOORDINATE = #{xCoordinate},
            YCOORDINATE = #{yCoordinate},
            DESCRIPTION = #{description},
            SITELINK = #{siteLink},
            OPENHOURS = #{openHours},
            PRICE = #{price},
            FORADULTS = #{forAdults}
        WHERE ID = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Long">
        DELETE
        FROM bars
        WHERE ID = #{id}
    </delete>

    <delete id="deleteAll">
        DELETE
        FROM bars
    </delete>

    <resultMap id="BarMap" type="tinkoff.tourism.model.sights.Bar">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="xCoordinate" column="xCoordinate"/>
        <result property="yCoordinate" column="yCoordinate"/>
        <result property="description" column="description"/>
        <result property="siteLink" column="siteLink"/>
        <result property="openTime" column="openTime"/>
        <result property="closeTime" column="closeTime"/>
        <result property="price" column="price"/>
        <result property="forAdults" column="forAdults"/>
    </resultMap>

</mapper>